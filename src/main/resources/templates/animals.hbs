<div class="row">
    <div class="col-sm-6 form-left">
        <h3>Add your Animal</h3> <br>
        <form action="/animals/new" method="post">
            <div class="form-group">
                <label for="name">Name of Animal</label>
                <input class="form-control" type="text" id="name" name="name" placeholder="Name of your Animal...">

                <input type="checkbox" name="endangered" value="yes"/>
                <label for="endangered">Is the Animal endangered?</label>

                <div class="form-group health">
                    <label for="health">Health</label>
                    <select class="form-control" name="health">
                        <option>$Healthy</option>
                        <option>$Okay</option>
                        <option>$Ill</option>
                    </select>
                </div>

                <div class="form-group age">
                    <label for="age">Age</label>
                    <select class="form-control" name="age">
                        <option>$Newborn</option>
                        <option>Young</option>
                        <option>Adult</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-success">Add Your Animal</button>
            </div>
        </form>

        <div class="col col-sm-6">
    </div>


</div>